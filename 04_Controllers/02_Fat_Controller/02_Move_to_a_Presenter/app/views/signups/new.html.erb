<h1>Signup!</h1>

<%= form_for(@signup) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :account_subdomain %><br>
    <%= f.text_field :account_subdomain %>
  </p>

  <p>
    <%= f.label :user_email %><br>
    <%= f.text_field :user_email %>
  </p>

  <p>
    <%= f.label :user_password %><br>
    <%= f.text_field :user_password %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
